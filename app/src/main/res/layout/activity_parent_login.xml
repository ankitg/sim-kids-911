<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="scottso.assist911.Activities.ParentLoginActivity">

    <info.hoang8f.widget.FButton
        fbutton:buttonColor="#59ABE3"
        fbutton:shadowColor="#4183D7"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="8dp"
        fbutton:cornerRadius="12dp"

        android:id="@+id/button_create_user_parent"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="CREATE STUDENT"
        android:textSize="12pt"
        android:textColor="#446CB3"
        android:layout_gravity="center"

        style="@style/TextViewCustomFont"

        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"

        android:layout_centerHorizontal="true"/>

    <info.hoang8f.widget.FButton
        fbutton:buttonColor="#59ABE3"
        fbutton:shadowColor="#4183D7"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="8dp"
        fbutton:cornerRadius="12dp"

        android:id="@+id/button_profile_parent"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="PROFILE"
        android:textSize="12pt"
        android:textColor="#446CB3"
        android:layout_gravity="center"

        style="@style/TextViewCustomFont"

        android:layout_marginTop="35dp"
        android:layout_below="@id/button_create_user_parent"

        android:layout_centerHorizontal="true"/>

    <info.hoang8f.widget.FButton
        fbutton:buttonColor="#59ABE3"
        fbutton:shadowColor="#4183D7"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="8dp"
        fbutton:cornerRadius="12dp"

        android:id="@+id/button_report_card_parent"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="REPORT CARD"
        android:textSize="12pt"
        android:textColor="#446CB3"
        android:layout_gravity="center"

        style="@style/TextViewCustomFont"

        android:layout_marginTop="35dp"
        android:layout_below="@id/button_profile_parent"

        android:layout_centerHorizontal="true"/>

</RelativeLayout>
