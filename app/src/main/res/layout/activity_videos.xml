<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="VIDEOS"
        android:textSize="22pt"
        android:gravity="center"
        android:id="@+id/textView"

        android:layout_marginTop="20dp"
        style="@style/TextViewCustomFont"/>

    <Spinner
        android:id="@+id/videos_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <info.hoang8f.widget.FButton
        fbutton:buttonColor="@color/color_emerald"
        fbutton:shadowColor="@color/color_nephritis"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="10dp"
        fbutton:cornerRadius="12dp"

        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="WATCH"
        android:textColor="#1E824C"
        android:textSize="15pt"
        android:gravity="center"
        android:id="@+id/btn_watch"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="96dp" />


</RelativeLayout>