<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/color_carrot">

    <TextView
        android:text="Please enter your name. This will be your username."
        android:textSize="12pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/new_username"
        android:hint="Username"
        android:inputType="textCapCharacters"
        android:layout_width="300dp"
        android:layout_height="50dp"

        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp"
        android:gravity="center"
        android:background="@drawable/rounded_edittext"
        style="@style/TextViewCustomFont"/>

    <TextView
        android:text="Please enter your personal address."
        android:textSize="12pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_marginTop="20dp"
        android:gravity="center"

        />

    <EditText
        android:id="@+id/address"
        android:hint="Address"
        android:inputType="textCapCharacters"
        android:layout_width="300dp"
        android:layout_height="50dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="290dp"
        android:gravity="center"
        android:background="@drawable/rounded_edittext"
        style="@style/TextViewCustomFont"/>

    <info.hoang8f.widget.FButton
        fbutton:buttonColor="@color/color_emerald"
        fbutton:shadowColor="@color/color_nephritis"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="8dp"
        fbutton:cornerRadius="12dp"

        android:id="@+id/button_create_account"
        android:text="CREATE ACCOUNT"
        android:textSize="30dp"
        android:textColor="#1E824C"
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:layout_above="@+id/button_back_to_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
/>
    <info.hoang8f.widget.FButton
        fbutton:buttonColor="@color/color_alizarin"
        fbutton:shadowColor="@color/color_pomegranate"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="10dp"
        fbutton:cornerRadius="12dp"

        android:id="@+id/button_back_to_login"
        android:text="BACK"
        android:textSize="30dp"
        android:textColor="#96281B"
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
/>
</RelativeLayout>
