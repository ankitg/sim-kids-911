<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="5"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="Sim Kids"
            android:textSize="30pt"
            android:gravity="center"
            android:id="@+id/textView"
            android:layout_weight="1"/>

       <info.hoang8f.widget.FButton
           fbutton:buttonColor="@color/color_emerald"
           fbutton:shadowColor="@color/color_nephritis"
           fbutton:shadowEnabled="true"
           fbutton:shadowHeight="8dp"
           fbutton:cornerRadius="12dp"

        android:text="PRACTICE"
        android:id="@+id/practice_button"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
           android:layout_gravity="center"
        android:layout_alignParentStart="true"
           android:layout_marginTop="35dp"
        style="@style/menu_buttons"/>

        <info.hoang8f.widget.FButton
            fbutton:buttonColor="@color/color_alizarin"
            fbutton:shadowColor="@color/color_pomegranate"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="8dp"
            fbutton:cornerRadius="12dp"
        android:layout_below="@+id/practice_button"
        android:text="VIDEOS"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:id="@+id/videos_button"
            android:layout_gravity="center"
        style="@style/menu_buttons"/>

        <info.hoang8f.widget.FButton
            fbutton:buttonColor="@color/color_concrete"
            fbutton:shadowColor="@color/color_asbestos"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="8dp"
            fbutton:cornerRadius="12dp"
        android:text="SETTINGS"
            android:layout_marginTop="5dp"
        android:id="@+id/settings_button"
        android:layout_below="@+id/button2"
            android:layout_gravity="center"
        style="@style/menu_buttons"/>

        <info.hoang8f.widget.FButton
            fbutton:buttonColor="@color/report_background"
            fbutton:shadowColor="@color/report_background_pressed"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="8dp"
            fbutton:cornerRadius="12dp"
        android:text= "REPORT CARD"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="25dp"
        android:id="@+id/report_button"
            android:layout_gravity="center"
    android:layout_below="@+id/button3"
        style="@style/menu_buttons"/>

    </LinearLayout>

</RelativeLayout>
