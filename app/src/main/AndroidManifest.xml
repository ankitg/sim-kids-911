<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="scottso.assist911" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name=".SimKidsApplication"
        android:allowBackup="true"
        android:icon="@drawable/simkids_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".Activities.LoginActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.MainMenuActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Activities.KeypadActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Activities.VideosActivity"
            android:label="Assist911"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Activities.CallActivity"
            android:label="Assist911"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Activities.LockActivity"
            android:label="Assist911"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Activities.ProfileActivity"
            android:label="Assist911"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Activities.ReportActivity"
            android:label="Assist911"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Activities.ResultsActivity"
            android:label="Assist911"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".Activities.PlayVideoActivity"
            android:label="Assist911"
            android:screenOrientation="portrait" >
            </activity>
        <activity android:name=".Activities.PracticePlayVideoActivity"
            android:label="Assist911"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".Activities.VoiceRecognitionActivity"
            android:label="Assist911"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoDisplay">
        </activity>
    </application>

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
